                    Height="15" Width="20" Checked="Cbm5_Checked" Unchecked="Cbm5_Unchecked"/>
        <CheckBox x:Name="cbm2" Content="" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Height="15" Width="20" Checked="Cbm2_Checked" Unchecked="Cbm2_Unchecked"/>
        <CheckBox x:Name="cbm1" Content="" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Height="15" Width="20" Checked="Cbm1_Checked" Unchecked="Cbm1_Unchecked"/>
        <CheckBox x:Name="cbm50C" Content="" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Height="15" Width="20" Checked="Cbm50C_Checked" Unchecked="Cbm50C_Unchecked"/>

        <Image x:Name="imgm20" Grid.Column="3" Grid.Row="0"  Stretch="Fill" Margin="3,5,3,5" Source="E:/monedas/m10.png"/>
        <Image x:Name="imgm10" Grid.Column="3" Grid.Row="1" Stretch="Fill" Margin="3,5,3,5" Source="E:/monedas/m20.png"/>
        <Image x:Name="imgm5" Grid.Column="3" Grid.Row="2"  Stretch="Fill" Margin="3,5,3,5" Source="E:/monedas/m5.png"/>
        <Image x:Name="imgm2" Grid.Column="3" Grid.Row="3"  Stretch="Fill" Margin="3,5,3,5" Source="E:/monedas/m2.png"/>
        <Image x:Name="imgm1" Grid.Column="3" Grid.Row="4"  Stretch="Fill" Margin="3,5,3,5" Source="E:/monedas/m1.png"/>
        <Image x:Name="imgm50C" Grid.Column="3" Grid.Row="5"  Stretch="Fill" Margin="3,5,3,5" Source="E:/monedas/m50C.png"/>

        <Button x:Name="btn_Agregar" Grid.Column="4" Grid.Row="0" Content="AGREGAR" Margin="5,20,5,20" Click="Btn_Agregar_Click"/>
        <Button x:Name="btn_Quitar" Grid.Column="5" Grid.Row="0" Content="QUITAR" Margin="5,20,5,20" Click="Btn_Quitar_Click"/>
        <Button x:Name="btn_Salir" Grid.Column="4" Grid.Row="5" Content="SALIR" Margin="5,20,5,20" Click="Btn_Salir_Click"/>

        <Label x:Name="lbl_Total" Grid.Column="4" Grid.Row="3" Content="TOTAL EN CAJA" Margin="6,30,0,10"/>
        <TextBox x:Name="txt_Parcial" Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,20,10,20"/>
        <TextBlock x:Name="txt_Total" Grid.Column="4" Grid.Row="4" Grid.ColumnSpan="2" Margin="10,20,10,10"/>



    </Grid>
</Window>
