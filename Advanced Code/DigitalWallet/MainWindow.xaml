            <Image.OpacityMask>
                <ImageBrush TileMode="None">
                    <ImageBrush.ImageSource>
                        <BitmapImage UriSource="file:///E:/monedas/b50.jpeg"/>
                    </ImageBrush.ImageSource>
                </ImageBrush>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="img20" Grid.Column="1" Grid.Row="5" Stretch="Fill" Source="E:/monedas/b20.jpg" >
            <Image.OpacityMask>
                <ImageBrush TileMode="None">
                    <ImageBrush.ImageSource>
                        <BitmapImage UriSource="file:///E:/monedas/b20.jpg"/>
                    </ImageBrush.ImageSource>
                </ImageBrush>
            </Image.OpacityMask>
        </Image>

        <CheckBox x:Name="cbb1000" Content="" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Height="15" Width="20" Checked="Cbb1000_Checked" Unchecked="Cbb1000_Unchecked"/>
        <CheckBox x:Name="cbb500" Content="" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Height="15" Width="20" Checked="Cbb500_Checked" Unchecked="Cbb500_Unchecked"/>
        <CheckBox x:Name="cbb200" Content="" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Height="15" Width="20" Checked="Cbb200_Checked" Unchecked="Cbb200_Unchecked"/>
        <CheckBox x:Name="cbb100" Content="" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Height="15" Width="20" Checked="Cbb100_Checked" Unchecked="Cbb100_Unchecked"/>
        <CheckBox x:Name="cbb50" Content="" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Height="15" Width="20" Checked="Cbb50_Checked" Unchecked="Cbb50_Unchecked"/>
        <CheckBox x:Name="cbb20" Content="" Grid.Column="0" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Height="15" Width="20" Checked="Cbb20_Checked" Unchecked="Cbb20_Unchecked"/>
        <CheckBox x:Name="cbm20" Content="" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"
