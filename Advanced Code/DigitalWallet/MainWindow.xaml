<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="|Digital Wallet|  a18300645" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="105*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image x:Name="img1000" Grid.Column="1" Grid.Row="0" Stretch="Fill" Source="E:/monedas/b1000.jpg" >
            <Image.OpacityMask>
                <ImageBrush TileMode="None">
                    <ImageBrush.ImageSource>
                        <BitmapImage UriSource="file:///E:/monedas/b1000.jpg"/>
                    </ImageBrush.ImageSource>
                </ImageBrush>
            </Image.OpacityMask>
        </Image>

        <Image x:Name="img500" Grid.Column="1" Grid.Row="1" Stretch="Fill" Source="E:/monedas/b500.jpg" >
            <Image.OpacityMask>
                <ImageBrush TileMode="None">
                    <ImageBrush.ImageSource>
                        <BitmapImage UriSource="file:///E:/monedas/b500.jpg"/>
                    </ImageBrush.ImageSource>
                </ImageBrush>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="img200" Grid.Column="1" Grid.Row="2" Stretch="Fill" Source="E:/monedas/b200.png" >
            <Image.OpacityMask>
                <ImageBrush TileMode="None">
                    <ImageBrush.ImageSource>
                        <BitmapImage UriSource="file:///E:/monedas/b200.png"/>
